---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import svgindex from '../assets/Fast-Internet.svg';

---
<!-- TODO complÃ©ter title -->
<Layout>
	<div class="content">
		<div id="title">
			<div>
				<h1>Hi, <br/> I'm Pierre</h1>
				<p>Freelance Web Developper</p>
			</div>
			<button>Let's work together !</button>
		</div>
		<Image src={svgindex} alt="Fast Internet" class="fullImage" />
	</div>

</Layout>

<style>
	 
	.fullImage {
		display: block;
        margin: 0 auto;
		width: 90%;
		height: auto;
	}

	#title {
		background-color: #e5e5e5;
		margin-top: 1em;
		padding: 1em 2em;
		display: flex;
        flex-direction: column;
        align-items: flex-start; /* Align children to the left */
        text-align: left;
		line-height: 1;

		h1 {
			font-family: 'Staatliches', sans-serif;
		}

		p {
			margin-top: 0;
			margin-bottom: 4em;
		}

		button {
			width: 70%;
		}
	}

	@media screen and (min-width: 636px) { 
		.content {
			width: 60%;
			display: flex;
			flex-direction: row;
			justify-content: space-between;
		}
		
        #title, .fullImage {
            width: 50%;
        }

		#title {
			justify-content: center;
			align-items: center;

			h1 {
				font-size: 4em;
			}
		 }

	 }


</style>