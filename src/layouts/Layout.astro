---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css';
import '@fontsource/staatliches';
import '@fontsource/roboto';
const { pageTitle, pageDescription, pageKeywords } = Astro.props;
---
<!-- TODO title, meta https://pagespeed.web.dev/analysis/https-pierredugast-com/pdmw1kjq22?form_factor=mobile -->
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/public/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <meta name="description" content={pageDescription} />
        <meta name="keywords" content={pageKeywords} />
        <meta property="og:title" content={pageTitle} />
        <meta property="og:description" content={pageDescription} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.pathname} />
        <meta property="og:image" content="/public/ogimage.png" />
        <link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
        <div class="wrapper">
            <Header/>
            <main class="content">
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>

<style>
	html,
	body {
        margin: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;

    }


    .wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main.content {
        flex: 1;
        align-content: center;
  
    }


    </style>
