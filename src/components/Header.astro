---
import { Image } from 'astro:assets';
import Navigation from './Navigation.astro';
import pierreDugastLogo from '../assets/pierre_dugast_logo.png';
---

<header>
    <a href="/">
        <Image src={pierreDugastLogo} alt="Pierre Dugast Logo" id="logo" />
    </a>
    <Navigation />
</header>

<style>
    header {
        display:flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 1em;
        /* box-shadow: rgba(17, 17, 26, 0.05) 0px 1px 0px, rgba(17, 17, 26, 0.1) 0px 0px 8px; */
    }

    #logo {
        width: 3em;
        height: auto;
        margin-right: 0.5em;
    }

    #logo:hover {
        border: 1px solid black;
        border-radius: 50%;
    }
</style>

